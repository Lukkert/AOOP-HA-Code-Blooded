<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="using:HA2.ScheduleApp.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="HA2.ScheduleApp.Views.LoginWindow"
        x:DataType="vm:LoginWindowViewModel">
  <Grid>
        <StackPanel Margin="10,10,-10,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!--x:Name="LoginPanel"-->
            <TextBlock Text="Login" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            
            
            <TextBox x:Name="LoginPanel" Watermark="Username" Margin="0,5,0,0" />
            <TextBox PasswordChar="*" Watermark="Password" Margin="0,5,0,0" />
            <Button Content="Login" Command="{Binding AttemptLogin}"/>
        </StackPanel>
    </Grid>
</UserControl>
