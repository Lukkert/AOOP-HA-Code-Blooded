<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:DataType="vm:TeacherViewModel"
        xmlns:vm="using:ScheduleApp.ViewModels"
        x:Class="ScheduleApp.Views.TeacherView"
        >

  <Grid RowDefinitions="Auto,*">
                <Grid Grid.Row="0" Background="#3141CF" Height="50" ColumnDefinitions="Auto,Auto">
                        <Button Command="{Binding Logout}" Grid.Column="0" Margin="10" Width="100" Background="Red" Foreground="White" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch">Log Out</Button>
                        <TextBlock Grid.Column="1" Margin="10" VerticalAlignment="Center" FontWeight="Bold" FontSize="15">Teacher</TextBlock> 
                </Grid>
                <Grid Grid.Row="1" ColumnDefinitions="*,*,*" Background="Gray">
                        <!--1st Column-->
                        <Grid Grid.Column="0" RowDefinitions="*,*,*" Background="White" ShowGridLines="True">
                                <ListBox Items="{Binding Subjects}">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="Blue" CornerRadius="5" Padding="10" Margin="5">
                                                <TextBlock Text="Name" FontSize="16"/>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                        </Grid>


                        <!--2nd Column-->
                        <Grid Grid.Column="1" Background="Gray">
                                <StackPanel>
                                        <TextBlock Text="Subject Name" FontSize="20" FontWeight="Bold" Margin="10"/>
                                        <TextBlock Text="Subject Description" FontSize="15" Margin="10"/>
                                </StackPanel>
                        </Grid>
                        <!--3rd Column-->
                        <Grid Grid.Column="2" RowDefinitions="*,*,*" Background="White" ShowGridLines="True">
                                <Rectangle Grid.Row="0"/>
                                <Rectangle Grid.Row="1"/>
                                <Button Content="Add Subject" Margin="10" Grid.Row="2"/>
                        </Grid>
                </Grid>
        </Grid>

</UserControl>
