<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:TeacherViewModel"
             xmlns:vm="using:ScheduleApp.ViewModels"
             x:Class="ScheduleApp.Views.TeacherView">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0" Background="#3141CF" Height="50" ColumnDefinitions="Auto,Auto">
            <Button Command="{Binding Logout}" Grid.Column="0" Margin="10" Width="100" Background="Red" Foreground="White"
                    HorizontalContentAlignment="Center" HorizontalAlignment="Stretch">
                Log Out
            </Button>
            <TextBlock Grid.Column="1" Margin="10" VerticalAlignment="Center" FontWeight="Bold" FontSize="15">
                Teacher
            </TextBlock>
        </Grid>

        <Grid Grid.Row="1" ColumnDefinitions="*,*,*" Background="Gray">
            <!-- 1st Column (Subjects List) -->
            <StackPanel Grid.Column="0" Background="White" Margin="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ListBox ItemsSource="{Binding Subjects}" 
                             SelectedItem="{Binding SelectedSubject}"
                             VerticalAlignment="Stretch"
                             MaxHeight="400">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Blue" CornerRadius="5" Padding="10" Margin="5">
                                    <TextBlock Text="{Binding Name}" FontSize="16"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>

                <!-- Remove Button -->
                <Button Content="Remove"
                        Command="{Binding RemoveSubject}" 
                        IsEnabled="{Binding SelectedSubject}" 
                        Width="150" Height="40"
                        Background="Red" Foreground="White"
                        HorizontalAlignment="Center"
                        Margin="10"/>
            </StackPanel>

            <!-- 2nd Column (Displays SelectedSubject's properties) -->
            <StackPanel Grid.Column="1" Background="Gray" Margin="5">
                <TextBlock Text="Subject Details" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBlock Text="Name:" FontWeight="Bold"/>
                <TextBlock Text="{Binding SelectedSubject.Name}" Margin="0,0,0,10"/>

                <TextBlock Text="Description:" FontWeight="Bold"/>
                <TextBlock Text="{Binding SelectedSubject.Description}" Margin="0,0,0,10"/>
            </StackPanel>

            <!-- 3rd Column (Create Subject Form) -->
            <StackPanel Grid.Column="2" Background="White" Margin="5" Spacing="10">
                <TextBlock Text="Create New Subject" FontSize="20" FontWeight="Bold"/>

                <TextBlock Text="Name:"/>
                <TextBox Text="{Binding NewSubjectName}" Margin="5"/>

                <TextBlock Text="Description:"/>
                <TextBox Text="{Binding NewSubjectDescription}" Margin="5"/>

                <Button Content="Create Subject"
                        Command="{Binding CreateSubjectCommand}" 
                        Width="150" Height="40"
                        Background="Green" Foreground="White"
                        HorizontalAlignment="Center"
                        Margin="10"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
