<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="using:ScheduleApp.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ScheduleApp.Views.LoginView"
        x:DataType="vm:LoginViewModel"
        Background="#13703C">
    <DockPanel LastChildFill="True">
        <Border Background="White" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Height="500" CornerRadius="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!--x:Name="LoginPanel"-->
                <!--<TextBlock Text="Login" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>-->

                <Label Foreground="Black" Content="Username" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
                <TextBox x:Name="LoginPanel" Watermark="Username" Margin="0,5,0,0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Text="{Binding Username}"/>

                <Label Foreground="Black" Content="Password" HorizontalAlignment="Center" HorizontalContentAlignment="Center" />
                <TextBox PasswordChar="*" Watermark="Password" Margin="0,5,0,0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Text="{Binding Password}"/>
                
                <Button Content="Log in" Command="{Binding AttemptLogin}" HorizontalAlignment="Center" Background="#07EA75" HorizontalContentAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </DockPanel>
</UserControl>
